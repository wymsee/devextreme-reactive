{
  "name": "@synconset/dx-react-core",
  "version": "4.0.17",
  "description": "Core library for Synconset React Components",
  "author": {
    "name": "Synconset Inc.",
    "url": "https://www.synconset.com/"
  },
  "bugs": {
    "url": "https://github.com/wymsee/devextreme-reactive/issues"
  },
  "homepage": "https://synconset.github.io/synconset-reactive/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wymsee/devextreme-reactive"
  },
  "keywords": [
    "react",
    "component",
    "react-component"
  ],
  "license": "SEE LICENSE IN README.md",
  "publishConfig": {
    "access": "public"
  },
  "globalName": "Synconset.DXReactCore",
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/dx-react-core.d.cts",
        "default": "./dist/dx-react-core.umd.cjs"
      },
      "import": {
        "types": "./dist/dx-react-core.d.ts",
        "default": "./dist/dx-react-core.es.js"
      },
      "default": "./dist/dx-react-core.es.js"
    }
  },
  "main": "dist/dx-react-core.umd.cjs",
  "module": "dist/dx-react-core.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/dx-react-core.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js -w",
    "dts": "tsc -p tsconfig.dts.json && node ./merge-dts.js",
    "update-api": "api-extractor run",
    "lint": "tslint -p tsconfig.lint.json",
    "lint:fix": "yarn lint -- --fix",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.1",
    "@types/enzyme": "^3.10.8",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "core-js": "^3.4.1",
    "enzyme": "3.10.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^1.27.2",
    "rollup-plugin-license": "^0.12.1",
    "rollup-plugin-typescript2": "^0.31.0",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@synconset/dx-core": "^4.0.17",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  }
}

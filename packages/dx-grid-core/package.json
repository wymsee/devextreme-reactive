{
  "name": "@synconset/dx-grid-core",
  "version": "4.0.15",
  "description": "Core library for the Reactive Grid component",
  "author": {
    "name": "Synconset Inc.",
    "url": "https://www.synconset.com/"
  },
  "bugs": {
    "url": "https://github.com/wymsee/devextreme-reactive/issues"
  },
  "homepage": "https://synconset.github.io/synconset-reactive/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wymsee/devextreme-reactive"
  },
  "keywords": [
    "data",
    "grid",
    "table"
  ],
  "license": "SEE LICENSE IN README.md",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/dx-grid-core.d.cts",
        "default": "./dist/dx-grid-core.umd.cjs"
      },
      "import": {
        "types": "./dist/dx-grid-core.d.ts",
        "default": "./dist/dx-grid-core.es.js"
      },
      "default": "./dist/dx-grid-core.es.js"
    }
  },
  "main": "dist/dx-grid-core.umd.cjs",
  "module": "dist/dx-grid-core.es.js",
  "types": "dist/dx-grid-core.d.ts",
  "typings": "dist/dx-grid-core.d.ts",
  "globalName": "Synconset.DXGridCore",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js -w",
    "dts": "tsc -p tsconfig.dts.json && node ./merge-dts.js",
    "lint": "tslint -p tsconfig.lint.json",
    "lint:fix": "yarn lint -- --fix"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.1",
    "@synconset/dx-core": "^4.0.12",
    "@types/exceljs": "^1.3.0",
    "core-js": "^3.4.1",
    "jest": "^29.2.2",
    "rollup": "^1.27.2",
    "rollup-plugin-license": "^0.12.1",
    "rollup-plugin-typescript2": "^0.31.0",
    "seamless-immutable": "^7.1.4",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.8.4",
    "typescript-tslint-plugin": "^1.0.1"
  },
  "peerDependencies": {
    "@synconset/dx-core": ">=4.0.0 <5"
  }
}
